    <VideoMessage>
        <![CDATA[
            <xml>
                <ToUserName>toUser</ToUserName>
                <FromUserName>fromUser</FromUserName>
                <CreateTime>12345678</CreateTime>
                <MsgType>video</MsgType>
                <Video>
                    <MediaId>media_id</MediaId>
