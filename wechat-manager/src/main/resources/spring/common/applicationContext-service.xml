<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="userDao" class="name.frb.wechat.dao.UserDao">
        <property name="jdbcTemplate" ref="jdbcTemplate"/>
    </bean>
    <bean id="userService" class="name.frb.wechat.service.impl.UserServiceImpl">
        <property name="userDao" ref="userDao"/>
    </bean>

    <bean id="msgDao" class="name.frb.wechat.dao.MsgDao">
        <property name="jdbcTemplate" ref="jdbcTemplate"/>
    </bean>
    <bean id="messageService" class="name.frb.wechat.service.impl.MessageServiceImpl">
        <property name="msgDao" ref="msgDao"/>
    </bean>

    <bean id="resourcesLoader" class="name.frb.configuration.resourceloader.RescourceLoader"/>
    <bean id="wechatTemplate" class="name.frb.configuration.xmlconfiguration.XmlConfiguration" init-method="init">
        <property name="rescourceLoader" ref="resourcesLoader"/>
        <constructor-arg value="classpath*:wechat/wechat-template.xml"/>
    </bean>
</beans>